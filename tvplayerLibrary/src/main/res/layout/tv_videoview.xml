<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tv_player_ad_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <com.mmengchen.tvplayer.view.CircleTextProgressbar
        android:id="@+id/tv_player_circle_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

    <com.mmengchen.tvplayer.view.MyVideoView
        android:id="@+id/tv_player_ad_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/video_controller" />
</FrameLayout>